
@{
    string title = ViewBag.Action + " Product";
    ViewData["Title"] = title;
} @*This form checks if user is logged in befor paying also it currently doesnt have verfication*@
@if (ViewBag.Logged == "True")
{
    <head>
    <title>Purchase</title>
</head>
<body>
    <h2>$@ViewBag.Price</h2>
    <h2>Payment Details</h2>
    <form asp-action="Pay" method="post">
        <div class="mb-3">
            <label for="Name" class="form-label">Name:</label>
            <input type="text" id="Name" name="Name" value="Fred Coates">
        </div>
        <div class="mb-3">
            <label for="Address" class="form-label">Address:</label>
            <input type="text" id="Address" name="Adress" value="77 Example Street, NSW">
        </div>
        <div class="mb-3">
            <label for="CardNum" class="form-label">Card Number:</label>
            <input type="text" id="CardNum" name="CardNum" value="1234 5678 9012 3456">>
        </div>
        <div class="mb-3">
            <label for="Exp" class="form-label">Expiration:</label>
            <input type="text" id="Exp" name="Exp" value="19/10">
        </div>
        <div class="mb-3">
            <label for="CVV" class="form-label">CVV:</label>
            <input type="text" id="CVV" name="CVV" value="000">
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</body>}
else{
    <p>Please Login First</p>
}
<a asp-controller="Cart" asp-action="ViewCart" class="btn btn-primary">Back</a>