@model Product
@{
    string title = ViewBag.Action + " Product";
    ViewData["Title"] = title;
}

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="Author" class="form-label">Author</label>
        <input asp-for="Author" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <input asp-for="Description" class="form-control">
    </div>

  

    <div class="mb-3">
        <label asp-for="Published" class="form-label">Year</label>
        <input asp-for="Published" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="Genre" class="form-label">Genre</label>
        <select asp-for="Genre" class="form-select">
            
            @foreach (Genre g in ViewBag.Genres)
            {
                <option value="@g.genreID">@g.Name</option>
            }
        </select>
    </div>
    @*Books1, movie2, game3*@
    <div class="mb-3">
        <label asp-for=subGenre class="form-label">subGenre</label>
        <select asp-for="subGenre" class="form-select" id="subGenreSelect">
                       
        </select>
    </div>


    

    <input type="hidden" asp-for="ID" />

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-controller="Home" asp-action="Index"
       class="btn btn-primary">Cancel</a>
</form>
